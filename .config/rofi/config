! --------------------------------------
! Other
! --------------------------------------

! Make rofi create a pid file and check this on startup. Avoiding multiple copies running simultaneously. This is useful when running rofi from a keybinding daemon.
!
! Default
! rofi.pid: /run/user/1000/rofi.pid
!

! Select what to use as background for fake transparency. This can be 'background', 'screenshot' or a path to an image file (currently only supports png).
!
! Default:
! rofi.fake-background: screenshot
!

! Set the name to use for mode. This is used as prompt and in combi-browser.
!
! Available {mode}s:
!
!     window: All windows.
!     windowcd: Windows on the current desktop.
!     run: Executables in $PATH.
!     drun: Installed desktop files.
!     ssh: SSH targets based on your ssh config file.
!     keys: Searchable list of key bindings.
!
! Default (all):
! rofi.display-{mode}:
!

! Click the mouse outside of the rofi window to exit.
!
! Default:
! rofi.click-to-exit: true
!
rofi.theme: /home/ajlende/.config/rofi/themes/base16.rasi
